<?xml version="1.0" ?>
<module>

<Login f="nodata">
  <Author f="noscroll">
    <Login t="list" f="user" l="Admin"/>
  </Author>
</Login>

<Admin f="nodata">
  <Home f="noscroll">
    <Create_New_Record l="Field_Entry"/>
    <Field_Entries t="list" e="Field_Entry"/>
  </Home>
  <search/>
  <Seed_ID>
    <autonum/>
  </Seed_ID>
</Admin>

<Field_Entry>
  <fmt>BORE - {{Bore_ID}} - {{Catchment}}</fmt>
  <Physiochemical>
    <cols>
      <Bore_ID f="autonum"/>
      <Site_Code/>
    </cols>
    <Catchment/>
    <!-- <Date b="date"/>
    <Time b="time"/> -->
    <Start_Time r="readonly"/>
    <Start_Time_Button t="button"/>
    <!-- TODO BBS make button to reset timestamp -->
    <gps/>
    <Elevation_m b="decimal">
      Elevation (m)
    </Elevation_m>
    <Monitoring_Equipment_Present t="radio">
      <opts>
        <opt>Y</opt>
        <opt>N</opt>
      </opts>
    </Monitoring_Equipment_Present>
    <Min_Slot_m b="decimal">
      Min Slot (m)
    </Min_Slot_m>
    <Max_Slot_m b="decimal">
      Max Slot (m)
    </Max_Slot_m>
    <Depth_to_Water_m b="decimal">
      Depth to Water (m)
    </Depth_to_Water_m>
    <Casing_Height_m b="decimal">
      Casing Height (m)
    </Casing_Height_m>
    <cols>
      <col>
        <Temp_30L b="decimal">
          Temp (30L)
        </Temp_30L>
        <pH_30L b="decimal">
          pH (30L)
        </pH_30L>
        <EC_uS_cm_30L b="decimal">
          EC uS/cm (30L)
        </EC_uS_cm_30L>
        <DO_mg_L_30L b="decimal">
          DO mg/L (30L)
        </DO_mg_L_30L>
        <ORP_30L b="decimal">
          ORP (30L)
        </ORP_30L>
      </col>
