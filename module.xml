        <opt>Y</opt>
        <opt>N</opt>
      </opts>
    </Water_Qual_Collected>
    <Metals_Filtered t="radio">
      <opts>
        <opt>Y</opt>
        <opt>N</opt>
      </opts>
    </Metals_Filtered>
    <Metals_Preserved t="radio">
      <opts>
        <opt>In field</opt>
        <opt>EOD</opt>
      </opts>
    </Metals_Preserved>
    <Alkalinity_Collected t="radio">
      <opts>
        <opt>Y</opt>
        <opt>N</opt>
      </opts>
    </Alkalinity_Collected>
    <Isotope_Collected t="radio">
      <opts>
        <opt>Y</opt>
        <opt>N</opt>
      </opts>
    </Isotope_Collected>
    <Pesticide_Dipstick t="radio">
