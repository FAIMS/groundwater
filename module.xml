        <pH_180L b="decimal">
          pH (180L)
        </pH_180L>
        <EC_uS_cm_180L b="decimal">
          EC uS/cm (180L)
        </EC_uS_cm_180L>
        <DO_mg_L_180L b="decimal">
          DO mg/L (180L)
        </DO_mg_L_180L>
        <ORP_180L b="decimal">
          ORP (180L)
        </ORP_180L>
